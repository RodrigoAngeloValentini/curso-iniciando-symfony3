{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('main.css') }}">
{% endblock %}

{% block body %}
<h1>{{ name | upper}}'s Tasks</h1>

{% if(name == 'rodrigo') %}
Hello Rodrigo
{% endif %}

<ul>
{% for task in tasks %}
    <li><a href="{{ path('taskshow',{'id':task.id}) }}">{{ task.name }}</a></li>
{% endfor %}
</ul>
{% endblock %}